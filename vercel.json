{
  "version": 2,
  "name": "mini-jira-frontend",
  "buildCommand": "cd bug-tracker-client && npm run build",
  "outputDirectory": "bug-tracker-client/dist",
  "installCommand": "cd bug-tracker-client && npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://your-backend-url.render.com/api/$1"
    },
    {
      "source": "/((?!api/.*).*)",
      "destination": "/index.html"
    }
  ]
}
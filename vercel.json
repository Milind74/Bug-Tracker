{
  "version": 2,
  "name": "mini-jira-frontend",
  "builds": [
    {
      "src": "bug-tracker-client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://your-backend-url.render.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "bug-tracker-client/dist/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/.*).*)",
      "destination": "/index.html"
    }
  ]
}
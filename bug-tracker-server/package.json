{
  "name": "bug-tracker-server",
  "version": "1.0.0",
  "description": "Bug Tracker API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "npm run build:ts || npm run build:fallback",
    "build:ts": "tsc --skipLibCheck",
    "build:fallback": "node -e \"const fs=require('fs'); if(!fs.existsSync('dist'))fs.mkdirSync('dist',{recursive:true}); fs.copyFileSync('fallback.js','dist/index.js'); console.log('Using fallback server');\"",
    "start": "node dist/index.js",
    "postinstall": "echo Dependencies installed successfully"
  },
  "keywords": ["bug-tracker", "api", "express"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.2",
    "multer": "^1.4.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^24.5.2",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2"
  }
}

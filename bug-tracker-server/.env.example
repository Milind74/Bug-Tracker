# Server Configuration
PORT=5000
NODE_ENV=development

# Database - MongoDB Atlas
# Get this connection string from your MongoDB Atlas dashboard
# Format: mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/bug-tracker?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/bug-tracker?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Client Configuration
CLIENT_URL=http://localhost:5174

# Email Configuration (Optional - for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# File Upload Configuration
# MAX_FILE_SIZE=10485760  # 10MB in bytes
# UPLOAD_DIR=uploads/